<h1>Todo page</h1>

{{#if todos.length}}
<ul class="container">
  {{#each todos}}
  <li class="todo">
    <form action="/complete" method="POST">
      {{#if completed}}
      <div class="content col-8 col-sm-9">
        <input class="form-check-input" type="checkbox" name="completed" checked>
        <p class="todo-title" style="text-decoration: line-through;">{{title}}</p>
      </div>
      {{else}}
      <div class="content col-8 col-sm-9">
        <input class="form-check-input" type="checkbox" name="completed">
        <p class="todo-title">{{title}}</p>
      </div>
      {{/if}}
      <input type="hidden" value="{{_id}}" name="id">
      <button class="btn btn-primary btn-sm col-sm-2 col-3" type="submit">Save</button>
    </form>
  </li>
  {{/each}}
</ul>
{{else}}
<p>No todos</p>
{{/if}}